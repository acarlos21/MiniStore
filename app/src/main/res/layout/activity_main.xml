<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#0d0c0c">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="Di-Hundred"
            android:layout_gravity="center"
            android:fontFamily="serif-monospace"
            android:textColor="#42f4df"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="218dp"
            android:src="@drawable/diamondhundreds"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Our Top Selling Item!"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:textColor="#04c8f4"
            android:paddingTop="50dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#04c8f4"
            android:text="Diamond x Puma"
            android:textSize="25sp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$ 200"
            android:textSize="20sp"
            android:textColor="#04c8f4"
            android:layout_gravity="center"/>

        <ImageView
            android:layout_width="258dp"
            android:layout_height="170dp"
            android:src="@drawable/pumadiamond"
            android:layout_gravity="center"
            android:paddingBottom="20dp"/>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="+"
            android:textColor="#000000"
            android:background="#04c8f4"
            android:backgroundTint="#04c8f4"
            android:onClick="increaseQuantity"
            />

        <TextView
            android:id="@+id/quantity_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textColor="#04c8f4"
            android:textSize="25sp"
            android:layout_gravity="center_horizontal"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:textColor="#000000"
            android:layout_gravity="center_horizontal"
            android:background="#04c8f4"
            android:backgroundTint="#04c8f4"
            android:onClick="decreaseQuantity"
            />

        <CheckBox
            android:id="@+id/cleaningKit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Cleaning Kit ($15)"
            android:textColor="#04c8f4"
            android:onClick="cleaningKitPrice"/>

        <CheckBox
            android:id="@+id/stickers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Sticker Pack($5)"
            android:textColor="#04c8f4"
            android:onClick="stickersPrice"/>

        <CheckBox
            android:id="@+id/hat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mystery Diamond Hat($25)"
            android:textColor="#04c8f4"
            android:layout_gravity="center"
            android:onClick="hatPrice"/>

        <Button
            android:id="@+id/order_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order"
            android:textColor="#000000"
            android:layout_gravity="center"
            android:background="#04c8f4"
            android:backgroundTint="#04c8f4"
            android:onClick="submitOrder"/>



    </LinearLayout>



</ScrollView>